{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "arrowParens": "avoid",
  "experimentalSortImports": {
    "groups": [
      "side-effect",
      "side-effect-style",
      "builtin",
      "subpath",
      "external",
      "internal",
      "parent",
      "sibling",
      "index",
      "type",
      "import",
      "style"
    ],
    "newlinesBetween": false
  },
  "experimentalTailwindcss": {},
  "ignorePatterns": ["**/*.yml"]
}
