{
  "name": "@meet-ai/worker",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "bun run build:css && bun run build:chat && bun run build:key && wrangler deploy",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "build:chat": "bun build src/client/chat.tsx --outfile public/chat.js --minify --target browser",
    "build:key": "bun build src/client/key.tsx --outfile public/key.js --minify --target browser",
    "build:css": "bunx @tailwindcss/cli -i src/styles/main.css -o public/tailwind.css --minify",
    "dev:chat": "bun build src/client/chat.tsx --outfile public/chat.js --target browser --watch",
    "dev:key": "bun build src/client/key.tsx --outfile public/key.js --target browser --watch",
    "dev:css": "bunx @tailwindcss/cli -i src/styles/main.css -o public/tailwind.css --watch"
  },
  "dependencies": {
    "dayjs": "^1.11.19",
    "hono": "4.11.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.12.10",
    "@cloudflare/workers-types": "4.20260207.0",
    "@tailwindcss/cli": "4.1.18",
    "tailwindcss": "4.1.18",
    "typescript": "catalog:",
    "vitest": "3.2.4",
    "wrangler": "4.63.0"
  }
}
